{% set navPages = collections.all | eleventyNavigation %}

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ title }}</title>
	<meta name="description" content="{{ description }}">
</head>
<body>
	<header>
		<nav>
			{{ navPages | dump | safe }}
		</nav>
	</header>
	<main>
		{% block content %}

			<h1>{{ title }}</h1>

			{{ content | safe }}

		{% endblock %}
	</main>
</body>
</html>