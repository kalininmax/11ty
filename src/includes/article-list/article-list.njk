{% if pagelist %}
	<ul class="pagelist">
		{% for post in pagelist %}
			<li>
				<article>
					<h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
					{% if post.data.date %}
						<p class="time"><time datetime="{{ post.data.date | datetime }}">{{ post.data.date | datehuman }}</time></p>
					{% endif %}
					<p>{{ post.data.description }}</p>
				</article>
			</li>
		{% endfor %}
	</ul>
{% endif %}